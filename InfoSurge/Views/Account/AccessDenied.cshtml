@{
    ViewData["Title"] = "Отказан достъп";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="border rounded shadow p-5 bg-light">
                <h1 class="display-4 text-danger mb-4">
                    <i class="bi bi-shield-exclamation"></i> Достъпът е отказан!
                </h1>
                <p class="lead mb-3">
                    Нямате разрешение за достъп до тази страница.
                </p>
                <a asp-controller="Home" asp-action="Index"
                   class="btn btn-primary mt-4">
                    <i class="bi bi-house-door-fill"></i> Върни се обратно
                </a>
            </div>
        </div>
    </div>
</div>

@using InfoSurge.Models.Account
@{
    ViewData["Title"] = "Вход";
}

@model LoginFormModel

<div class="row justify-content-center">
    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10">
        <form method="post" class="p-4 shadow rounded" asp-action="Login">
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
            <h2 class="text-center">Вход в системата</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label">Потребителско име:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input asp-for="UserName" class="form-control"/>
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Парола:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    <input asp-for="Password" class="form-control"/>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <small>
                Нямате акаунт? <a asp-controller="Account" asp-action="Register" style="text-decoration: none">Регистрирайте се сега!</a>
            </small>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Вход</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@using InfoSurge.Core.DTOs.Category
@using InfoSurge.Core.Interfaces
@inject ICategoryService CategoryService

@{
    List<CategoryDto> categories = await CategoryService.GetCategoryNamesIntoList();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InfoSurge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InfoSurge.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a href="@Url.Action("Index", "Home")"><img src="~/infosurge logo.png" class="logo" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary dropdown-toggle text-dark" data-bs-toggle="dropdown" aria-expanded="false">
                                        Категории
                                    </button>
                                    <ul class="dropdown-menu">
                                        @if (!categories.Any())
                                        {
                                            <li>
                                                <div class="col-12">
                                                    <div class="alert alert-warning text-center">
                                                        Няма Категории.
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                        @foreach (CategoryDto category in categories)
                                        {
                                            <li class="nav-item">
                                                <a class="dropdown-item" asp-controller="Home" asp-action="Details" asp-route-id="@category.Id">@category.Name</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="container-fluid py-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-dark-emphasis bg-primary">
        <div class="container">
            &copy; @DateTime.Now.Year - InfoSurge
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
